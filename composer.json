{
    "name": "hipay/gateway",
    "license": "proprietary",
    "type": "project",
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "files": [
            "app/AppKernel.php",
            "app/Env.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.6",
        "symfony/symfony": "2.8.*",
        "doctrine/orm": "2.3.*",
        "doctrine/doctrine-bundle": "1.5.*",
        "doctrine/annotations": "1.2.*",
        "doctrine/cache": "1.5.*",
        "doctrine/collections": "1.3.*",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~5.0",
        "sensio/framework-extra-bundle": "^3.0.2",
        "jms/serializer-bundle": "1.0.*",
        "cocur/slugify": "2.2",
        "friendsofsymfony/rest-bundle": "^1.7",
        "nelmio/api-doc-bundle": "^2.4",
        "incenteev/composer-parameter-handler": "~2.0",
        "symfony/yaml": "3.0.0",
        "himedia/hipay-common-provider": "2.154.*",
        "hipay/provider-protocol": "1.5.*",
        "nelmio/cors-bundle": "^1.4",
        "guzzlehttp/guzzle": "5.0",
        "twig/twig": "^1.0"
    },
    "require-dev": {
        "sensio/generator-bundle": "~3.0",
        "symfony/phpunit-bridge": "~2.7",
        "phpunit/phpunit": "^5.0",
        "phpspec/phpspec": "^3.2",
        "hipay/php-database-migration": "^4.0"
    },
    "repositories": [
        {"type": "vcs", "url": "git@gitlab.hipay.org:provider/payments-common-provider.git"},
        {"type": "vcs", "url": "git@gitlab.hipay.org:Payment/payments-common-protocol.git"},
	    {"type": "vcs", "url": "git@gitlab.hipay.org:provider/provider-protocol.git"}
    ],
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
